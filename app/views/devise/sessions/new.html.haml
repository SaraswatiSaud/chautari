.container.text-center.col-md-4.col-md-offset-4
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-control'
    .form-group
      = f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control'
    - if devise_mapping.rememberable?
      .form-group
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: 'button btn btn-primary col-md-12'
    %br
  = render "devise/shared/links"
