.container.text-center.col-md-6.col-md-offset-3
  %h2 Change your password
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br/
      = f.password_field :password, placeholder: 'Password', autofocus: true, autocomplete: "off", class:"form-control"
    .form-group
      = f.password_field :password_confirmation, placeholder: 'Confirm new password', autocomplete: "off", class:"form-control"
    .actions
      = f.submit "Change my password", class: 'button btn btn-primary col-md-12'
  = render "devise/shared/links"
