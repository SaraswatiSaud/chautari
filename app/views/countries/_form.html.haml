= form_for @country do |f|
  - if @country.errors.any?
    #error_explanation
      %h2= "#{pluralize(@country.errors.count, "error")} prohibited this country from being saved:"
      %ul
        - @country.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :iso_code
    = f.text_field :iso_code
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
