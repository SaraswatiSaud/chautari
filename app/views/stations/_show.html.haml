.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
  %h1.h2 Station Info
  .btn-toolbar.mb-2.mb-md-0
    = link_to 'Edit', edit_station_path(@station), class: 'btn btn-default' if user_signed_in? && current_user.is_admin?
    = link_to '< Back', :back, remote: true, class: 'btn btn-default'

.row
  .col-md-2= image_tag(@station.logo_url, class: 'border img-fluid')
  .col-md-10
    %h5= @station.name
    %p= @station.country
    %p= @station.website if @station.website?
    %p= @station.twitter if @station.twitter?
    %p= @station.facebook if @station.facebook?

    - if @station.streams.any?
      - stream = @station.streams.first
      -# = button_tag 'Stop', class: 'plr-stop'
