.col-md-4.form-group
  = link_to station_path(station), remote: true do
    .media.border
      = image_tag(station.logo_url, class: 'border-right mr-3', size: '90x90')
      .media-body.py-2.d-inline-block.pr-2{style: 'width: 50px;'}
        %h5.mt-0.text-nowrap.text-truncate= station.name
        %span.h6.text-muted= station.country
