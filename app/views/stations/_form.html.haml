= form_for @station do |f|
  - if @station.errors.any?
    #error_explanation
      %h2= "#{pluralize(@station.errors.count, "error")} prohibited this station from being saved:"
      %ul
        - @station.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :facebook
    = f.text_field :facebook
  .field
    = f.label :total_listeners
    = f.text_field :total_listeners
  .actions
    = f.submit 'Save'
